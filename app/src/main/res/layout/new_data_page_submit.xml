<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">


    <Button
            android:text="@string/submit_button_label"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit_button"
            android:onClick="onSubmitButtonClick"
            android:layout_gravity="center|fill_vertical"
            android:drawableEnd="@drawable/ic_round_done_all_24px"
            android:background="@drawable/button_border" android:layout_marginTop="10dp"/>
</LinearLayout>